<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.itsnowball.aicomposer.SignUpActivity"
    android:background="#FFFFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:id="@+id/email_section">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/email"
            android:id="@+id/textView"
            android:textSize="13dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <EditText
                android:id="@+id/email_et"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:inputType="textEmailAddress"
                android:textSize="15dp"
                android:singleLine="true"
                android:hint="이메일 입력"
                android:paddingRight="30dp" />

            <ImageButton
                android:id="@+id/email_ib"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="0dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_clear_btn"
                android:layout_marginBottom="5dp"
                android:background="#00FFFFFF"
                android:scaleType="fitXY" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="5dp"
        android:layout_below="@+id/email_section"
        android:layout_centerHorizontal="true"
        android:id="@+id/password_section">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/nickname"
            android:id="@+id/textView5"
            android:textSize="13dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/nickname_et"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:textSize="15dp"
                android:singleLine="true"
                android:hint="닉네임 입력"
                android:password="false"
                android:paddingRight="30dp" />

            <ImageButton
                android:id="@+id/nickname_ib"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="0dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/ic_clear_btn"
                android:layout_marginBottom="5dp"
                android:background="#00FFFFFF"
                android:scaleType="fitXY" />

        </FrameLayout>

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_below="@+id/password_section"
        android:layout_alignParentStart="true"
        android:contextClickable="false"
        android:buttonTint="@color/colorPrimary"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/agreement_join"
        android:id="@+id/agreement_tv"
        android:layout_alignTop="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/join_mit"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/agreement_tv"
        android:layout_toEndOf="@+id/agreement_tv"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/personal_join"
        android:id="@+id/personal_tv"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/colorPrimary"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/join_agree"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/personal_tv"
        android:layout_toEndOf="@+id/personal_tv"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_marginLeft="1dp"
        android:textIsSelectable="false" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="@string/join_text"
        android:id="@+id/button"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:background="@drawable/join_btn_shape"
        android:textColor="#FFFFFFFF"
        android:textSize="15dp" />
</RelativeLayout>
