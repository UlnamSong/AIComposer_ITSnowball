<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:padding="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView2"
                android:background="@drawable/test_usericon" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="홍길동"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="-2dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="\@abc123"
                    android:gravity="center_vertical"
                    android:textSize="13dp"
                    android:paddingLeft="10dp"
                    android:textColor="#FF777777"
                    android:layout_marginTop="-2dp"
                    android:layout_weight="1.5" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="테스트 내용입니다."
            android:layout_marginTop="0dp"
            android:textSize="13dp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="15dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/imageView4"
            android:src="@drawable/list_item_line"
            android:scaleType="fitXY"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/downloadBtn"
                android:text="@string/sociallist_download"
                android:textColor="@color/list_download"
                android:focusable="false"
                android:textSize="14dp"
                android:drawableLeft="@drawable/download_button_unclicked"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="2dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/favoriteBtn"
                android:text="@string/sociallist_favorite"
                android:textColor="@color/favorite_color"
                android:focusable="false"
                android:textSize="14dp"
                android:drawableLeft="@drawable/favorite_button"
                android:gravity="center_vertical|center_horizontal"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="2dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
