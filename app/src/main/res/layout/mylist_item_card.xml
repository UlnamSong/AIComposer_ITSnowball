<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/card_background_selector"
        android:descendantFocusability="afterDescendants"
        android:padding="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imageView2"
                android:background="@drawable/details_theme" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_musictitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="홍길동"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1.3" />

                <TextView
                    android:id="@+id/tv_musictheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="홍길동"
                    android:gravity="center_vertical"
                    android:textSize="12dp"
                    android:paddingLeft="10dp"
                    android:layout_weight="1.3"
                    android:textColor="#ff999999" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/imageView4"
            android:src="@drawable/list_item_line"
            android:scaleType="fitXY"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/downloadBtn"
                android:text="@string/sociallist_download"
                android:textColor="@color/list_download"
                android:focusable="false"
                android:textSize="15dp"
                android:drawableLeft="@drawable/download_button_unclicked"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/list_button_selector"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="2dp" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
